{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Debug C++ file (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "MIMode": "gdb",
            "externalConsole": false,
            "preLaunchTask": "build active cpp",
            "setupCommands": [
                {
                    "description": "Abilita pretty printing per GDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}